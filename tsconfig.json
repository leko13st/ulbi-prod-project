{
    "compilerOptions": {
        "baseUrl": "src",
        // "paths": {
        //     "*": ["./src/*"]
        // },
        "outDir": "./dist/",
        "noImplicitAny": true,
        "module": "esnext",
        "target": "es5",
        "jsx": "react-jsx",
        "allowJs": true,
        "moduleResolution": "node",
        // Позволяет юзать импорты const Moment = require('moment') как import moment from 'moment'
        "esModuleInterop": true,
        // Юзать import webpack from 'webpack' вместо import * as webpack from 'webpack'
        "allowSyntheticDefaultImports": true
    },
    "ts-node": {
        "compilerOptions": {
            "module": "CommonJS"
        }
    },
    "include": ["./config/jest/setupTests.ts", "src"]
}
